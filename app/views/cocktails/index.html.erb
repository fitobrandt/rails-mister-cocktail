<% c = 0 %>

<div class="container">
  <h2>My Cocktails</h2>
  <% @cocktails.each do |cocktail| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src=<%= images[c] %>>
      <% c += 1 %>
      <div class="card-body">
        <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
      </div>
    </div>
  <% end %>
  <%= link_to "Add Cocktails", new_cocktail_path(@cocktail),:class => "btn btn-primary" %>
</div>
